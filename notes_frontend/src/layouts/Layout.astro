---
import ThemeToggle from '../components/ThemeToggle.astro';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Simple Notes</title>
    <meta name="description" content="A simple notes application built with Astro." />
  </head>
  <body>
    <ThemeToggle />
    <slot />
  </body>
</html>

<style>
  :root {
    /* Theme colors requested */
    --color-primary: #1976d2;
    --color-accent: #ff9800;
    --color-secondary: #ffffff;

    /* Light theme variables */
    --bg-color: var(--color-secondary);
    --text-color: #1f2937;
    --text-secondary: #6b7280;
    --border-color: rgba(0, 0, 0, 0.08);
    --card-bg: #ffffff;
    --card-hover-bg: #f9fafb;
    --shadow-color: rgba(0, 0, 0, 0.06);
    --shadow-hover-color: rgba(0, 0, 0, 0.1);

    --radius-sm: 8px;
    --radius-md: 12px;
    --radius-lg: 16px;

    --sidebar-width: 300px;
    --header-height: 64px;
  }

  body.dark-theme {
    /* Dark theme alternative (optional) */
    --bg-color: #0b1220;
    --text-color: #eef2f7;
    --text-secondary: #b6c2d9;
    --border-color: rgba(255, 255, 255, 0.12);
    --card-bg: #111a2b;
    --card-hover-bg: #0f172a;
    --shadow-color: rgba(0, 0, 0, 0.4);
    --shadow-hover-color: rgba(0, 0, 0, 0.5);
  }

  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    background-color: var(--bg-color);
    color: var(--text-color);
    transition: background-color 0.2s ease, color 0.2s ease;
    font-family: Inter, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, "Apple Color Emoji", "Segoe UI Emoji";
  }

  /* App-shell helper classes for the Notes app */
  .app-shell {
    display: grid;
    grid-template-columns: var(--sidebar-width) 1fr;
    grid-template-rows: var(--header-height) 1fr;
    grid-template-areas:
      "header header"
      "sidebar main";
    height: 100vh;
  }

  .app-header {
    grid-area: header;
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 0 16px;
    border-bottom: 1px solid var(--border-color);
    background: var(--card-bg);
    position: sticky;
    top: 0;
    z-index: 5;
  }

  .brand {
    display: flex;
    align-items: center;
    gap: 10px;
    font-weight: 600;
  }

  .brand-badge {
    width: 28px;
    height: 28px;
    border-radius: 8px;
    background: var(--color-primary);
    display: inline-block;
  }

  .searchbar {
    flex: 1;
    display: flex;
    align-items: center;
    background: var(--card-hover-bg);
    border: 1px solid var(--border-color);
    border-radius: 10px;
    height: 40px;
    padding: 0 10px;
    gap: 8px;
  }

  .searchbar input {
    flex: 1;
    border: none;
    background: transparent;
    outline: none;
    color: var(--text-color);
  }

  .btn {
    background: var(--color-primary);
    color: #fff;
    border: none;
    border-radius: 10px;
    padding: 10px 14px;
    font-weight: 600;
    cursor: pointer;
    box-shadow: 0 1px 2px var(--shadow-color);
  }
  .btn:disabled { opacity: 0.7; cursor: not-allowed; }

  .btn.secondary {
    background: var(--color-accent);
    color: #0b1220;
  }

  .app-sidebar {
    grid-area: sidebar;
    border-right: 1px solid var(--border-color);
    background: var(--card-bg);
    overflow: auto;
  }

  .app-main {
    grid-area: main;
    overflow: auto;
    background: var(--bg-color);
  }
</style>
